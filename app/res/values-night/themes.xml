<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Material color attributes (dark theme) -->

    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/black_800</item> <!--toolbar color-->
        <item name="colorPrimaryDark">@color/black_800</item> <!--status bar color-->
        <item name="colorPrimaryVariant">@color/primaryLightColor</item> <!--status bar color-->
        <item name="colorSecondary">@color/secondaryColor</item> <!--fab icon color-->
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item> <!--use sparingly-->

        <item name="colorSurface">@color/black_800</item>
        <item name="colorError">@color/red_200</item>

        <item name="android:colorBackground">@color/black_900</item>

        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
        <item name="android:textColorSecondary">@color/primaryTextColor</item>

        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorOnSecondary">@color/white_50</item>
        <item name="colorOnBackground">@color/white_50</item>
        <item name="colorOnSurface">@color/white_50</item>
        <item name="colorOnError">@color/white_50</item>

        <item name="fontFamily">@font/poppins_semi_bold</item>

        <!-- Apply themes to views globally -->

        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item> <!-- this applies a default theme for all alert dialogs -->
        <item name="bottomSheetDialogTheme">@style/App.Theme.BottomSheet</item> <!-- this applies a default theme for all bottom sheets  -->
        <item name="toolbarStyle">@style/ToolbarAppearance</item> <!-- this applies a default theme for all toolbars -->
        <item name="tabStyle">@style/App.Theme.TabLayout</item> <!-- this applies a default theme for all tab-layouts -->
        <item name="materialCardViewStyle">@style/App.Theme.MaterialCardView</item> <!-- this applies a default theme for all material card view-->
        <item name="materialButtonStyle">@style/App.Theme.Button</item> <!-- this applies a default theme for all material buttons -->

    </style>
</resources>
